<Window x:Class="WSR16.Window.ContactInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSR16.Window"
        mc:Ignorable="d"
        Title="ContactInfo" Height="400" Width="600"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Контакты" HorizontalAlignment="Center" Margin="30 20 30 30" FontSize="25"/>
            <TextBlock Text="Для получения дополнительной информации пожалуйта свяжитесь с координаторами" TextWrapping="WrapWithOverflow" Margin="20 10 20 0"/>
            <StackPanel Orientation="Horizontal" Margin="20 20 20 20">
                <TextBlock Text="Телефон:  " FontWeight="Bold"/>
                <TextBlock Text="+55 11 9988 7766"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20 0">
                <TextBlock Text="Email:  " FontWeight="Bold"/>
                <TextBlock Text="coordinators@marathonskills.org"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
